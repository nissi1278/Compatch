<div class="container">
    <% if @group.errors.any? %>
        <div>
            <h2 class=""><%= @group.errors.count %>件のエラーがあります。</h2>
            <ul class="">
                <%= @group.errors.full_messages.each do |message| %>
                    <li class=""><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="white-card w-full flex flex-wrap justify-center mb-5">
        <div class="w-full lg:w-8/12 px-4">
            <div class="border-0 p-4">
                <div class="flex items-center mb-3">
                    <i class="fas fa-calculator calculator-icon"></i>
                    <h2 class="section-title mb-0">飲み会グループ作成</h2>
                </div>
                <p class="form-label text-gray-500 mb-4">飲み会のグループを作成しよう。</p>
                <%= form_with model: @group, class: "group-form" do |form| %>
                    <div class="mb-4">
                        <%= form.text_field :name, 
                            class: "input-field", 
                            placeholder: "グループ名を入力",
                            value: "" %>
                    </div> 

                    <div class="mb-4">
                        <label class="form-label text-gray-500">参加人数を選択してね。</label>
                        <div class="participant-counter justify-between">
                            <%= form.number_field :participant_count, 
                                min: 1,
                                class: "input-field",
                                style: "width: auto;" %>
                            <button class="counter-btn" type="button" onclick="incrementCounter()">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>

                    <%= form.submit class: "btn bg-blue-600 w-full" do %>
                        <i class="fas fa-plus mr-2"></i>
                        グループを作成
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="white-card flex flex-wrap justify-center pt-3">
        <div class="w-full lg:w-8/12 px-4">
            <div class="flex items-center mb-4">
                <i class="fas fa-calculator text-blue-500 text-4xl"></i>
                <h2 class="section-title mb-0">最近作成したグループ</h2>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-btn {
    color: #dc3545;
    background: none;
    border: none;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    text-decoration: none;
    }

    .delete-btn:hover {
        color: #c82333;
        transform: scale(1.1);
    }
</style>

<script>
    function incrementCounter() {
        const input = document.querySelector('input[name="group[participant_count]"]');
        input.value = parseInt(input.value) + 1;
    }
</script>