<div class="max-w-screen-lg mx-auto px-4 pb-5">
    <div class="w-full flex flex-wrap justify-center mb-5">
        <div class="w-full lg:w-8/12 px-4">
            <div class="white-card border-0 p-4">
                <div class="flex items-center mb-3">
                    <i class="fas fa-calculator calculator-icon"></i>
                    <h2 class="section-title mb-0">飲み会グループ作成</h2>
                </div>
                <p class="text-gray-500 mb-4">飲み会のグループを作成しよう。</p>
                <%= form_with model: @group, local: true, class: "group-form" do |form| %>
                    <div class="mb-4">
                        <%= form.text_field :name, 
                            class: "input-field", 
                            placeholder: "グループ名を入力",
                            value: "新入社員歓迎会" %>
                    </div> 
                    
                    <div class="mb-4">
                        <label class="form-label-custom text-gray-500">参加人数を選択してね。</label>
                        <div class="participant-counter justify-between">
                            <%= form.number_field :participant_count, 
                                value: 5, 
                                min: 1,
                                class: "border-0 bg-transparent text-base",
                                style: "width: auto;" %>
                            <button class="counter-btn" type="button" onclick="incrementCounter()">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    
                    <%= form.submit class: "btn-primary-custom w-full" do %>
                        <i class="fas fa-plus mr-2"></i>
                        グループを作成
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="flex flex-wrap justify-center pt-3">
        <div class="w-full lg:w-8/12 px-4">
            <div class="flex items-center mb-4">
                <i class="fas fa-calculator text-blue-500 text-4xl"></i>
                <h2 class="section-title mb-0">最近作成したグループ</h2>
            </div>
        </div>
    </div>
</div>

